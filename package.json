{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/web",
      "examples/server",
      "examples/node",
      "examples/taro"
    ]
  },
  "scripts": {
    "dev": "lerna run --parallel --stream dev",
    "build": "lerna run --stream build",
    "test": "lerna run --parallel --stream test",
    "publish": "lerna publish --force-publish=*",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4"
  }
}
